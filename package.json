{
  "name": "flowdesk-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@11.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start:frontend": "npm run start --workspace=@flowdesk/frontend",
    "start:backend": "npm run start --workspace=@flowdesk/backend",
    "dev": "concurrently -n fe,be -c cyan,green \"npm run start:frontend\" \"npm run start:backend\"",
    "build:shared": "npm run build --workspace=@flowdesk/shared",
    "build:frontend": "npm run build --workspace=@flowdesk/frontend",
    "build:backend": "npm run build --workspace=@flowdesk/backend",
    "build:all": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "test:frontend": "npm run test --workspace=@flowdesk/frontend",
    "test:backend": "npm run test --workspace=@flowdesk/backend",
    "test:all": "npm run test:frontend && npm run test:backend",
    "clean": "rimraf apps/frontend/dist apps/backend/dist packages/shared/dist node_modules/.cache"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.2"
  }
}
